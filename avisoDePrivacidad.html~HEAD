<script>
var section = document.querySelector("section");
/*only for changing value of the CSS variable (Custom Property) which is set on section*/
section.addEventListener("scroll", function (e) {
  var maxScroll = section.scrollHeight - section.offsetHeight;
  var scroll = section.scrollTop / maxScroll;
  section.style.setProperty("--scrollX", scroll); // CSS variable (Custom Property) which will be set on SECTION element as inline-style
});

</script>
